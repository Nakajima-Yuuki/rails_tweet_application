<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to '編集', edit_post_path(@post), style:'border:1px solid skyblue;padding:5px' %></div> 
        <%= link_to '削除', @post, method: :delete, data: { confirm: 'Are you sure?' }, style:'border:1px solid skyblue;padding:5px' %>
      </div>
    </div>
  </div>
</div>